{% extends 'templates/app.twig' %}

{% block content %}

    <div class ="row">
        <div class="col-md-8">

            <h2>Add locations for this segment</h2>
            <h3>TripName: {{ tripName }}</h3>

            <form action="{{ path_for('addLocationDetails', {email: email, tripName: tripName, tripId: tripId}) }}" method="post">

                <div class="form-group">

                    <label for="fromCity">Starting City</label>

                    <input type="text" name="fromCity" id="fromCity" class="form-control">

                </div>

                <div class="form-group">

                    <label for="fromCountry">Starting Country</label>

                    <input type="text" name="fromCountry" id="fromCountry" class="form-control">

                </div>

                <div class="form-group">

                    <label for="toCity">Ending City</label>

                    <input type="text" name="toCity" id="toCity" class="form-control">

                </div>

                <div class="form-group">

                    <label for="toCountry">Ending Country</label>

                    <input type="text" name="toCountry" id="toCountry" class="form-control">

                </div>

                <button type="submit" class="btn btn-default">add</button>

            </form>

        </div>
        <div class="col-md-4">

            <h4><a href = "{{ path_for('trip.getProfile', {email: email}) }}" method="get"> Return to profile </a></h4>


        </div>

    </div>

{% endblock %}