{% extends 'templates/app.twig' %}

{% block content %}

    <div class ="row">
        <div class="col-md-8">
            <h1>Add Trip Details</h1>
            <h2>TripName: {{ tripName }}</h2>
            <h3>TripId: {{ tripId }}</h3>
            <form action="{{ path_for('addLocationDetails') }}" method="post">

                <div class="form-group">

                    <label for="tripId">TripId</label>

                    <input type="text" name="tripId" id="tripId" class="form-control">

                </div>

                <h3>Locations: here you can list to and from location details</h3>

                <h4>From</h4>

                <div class="form-group">

                    <label for="fromCity">City</label>

                    <input type="text" name="fromCity" id="fromCity" class="form-control">

                </div>

                <div class="form-group">

                    <label for="fromCountry">Country</label>

                    <input type="text" name="fromCountry" id="fromCountry" class="form-control">

                </div>

                <div class="form-group">

                    <label for="hotelNameFrom">Hotel Name</label>

                    <input type="text" name="hotelNameFrom" id="hotelNameFrom" class="form-control">

                </div>

                <div class="form-group">

                    <label for="checkInDateFrom">check In Date (YYYY-MM-DD)</label>

                    <input type="text" name="checkInDateFrom" id="checkInDateFrom" class="form-control">

                </div>

                <div class="form-group">

                    <label for="checkOutDateFrom">Check Out Date (YYYY-MM-DD)</label>

                    <input type="text" name="checkOutDateFrom" id="checkOutDateFrom" class="form-control">

                </div>

                <div class="form-group">

                    <label for="activityFrom">activity</label>

                    <input type="text" name="activityFrom" id="activityFrom" class="form-control">

                </div>

                <h4>To</h4>

                <div class="form-group">

                    <label for="toCity">City</label>

                    <input type="text" name="toCity" id="toCity" class="form-control">

                </div>

                <div class="form-group">

                    <label for="toCountry">Country</label>

                    <input type="text" name="toCountry" id="toCountry" class="form-control">

                </div>

                <div class="form-group">

                    <label for="hotelNameTo">Hotel Name</label>

                    <input type="text" name="hotelNameTo" id="hotelNameTo" class="form-control">

                </div>

                <div class="form-group">

                    <label for="checkInDateTo">check In Date (YYYY-MM-DD)</label>

                    <input type="text" name="checkInDateTo" id="checkInDateTo" class="form-control">

                </div>

                <div class="form-group">

                    <label for="checkOutDateTo">Check Out Date (YYYY-MM-DD)</label>

                    <input type="text" name="checkOutDateTo" id="checkOutDateTo" class="form-control">

                </div>

                <div class="form-group">

                    <label for="activityTo">activity</label>

                    <input type="text" name="activityTo" id="activityTo" class="form-control">

                </div>


                <h3>Transportation: here you can add your transportation dates for the to and from</h3>


                <div class="form-group">

                    <label for="startDate">Start Date(YYYY-MM-DD)</label>

                    <input type="text" name="startDate" id="startDate" class="form-control">

                </div>

                <div class="form-group">

                    <label for="endDate">End Date(YYYY-MM-DD)</label>

                    <input type="text" name="endDate" id="endDate" class="form-control">

                </div>

                <button type="submit" class="btn btn-default">add details</button>




            </form>

        </div>
        <div class="col-md-4">

        </div>

    </div>

{% endblock %}